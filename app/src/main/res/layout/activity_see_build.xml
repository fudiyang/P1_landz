<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".landz.UI.welcome.seebuild.SeeBuildActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#871F78"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_seebuild_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:focusable="false"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="请输入房源或商圈名称..."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_18"
            android:textColor="@color/withe"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:text="地图    "/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_seebuild_1"
        android:layout_below="@id/re_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_seebuild_location"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/withe"
            android:layout_weight="1"
            android:text="区域"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableRight="@mipmap/filter_down"
            android:paddingRight="20dp"
            android:textSize="@dimen/textsize_16"/>
        <TextView
            android:id="@+id/tv_seebuild_price"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/withe"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:text="价格"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/filter_down"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_16"/>
        <TextView
            android:id="@+id/tv_seebuild_room"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/withe"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:text="居室"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/filter_down"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_16"/>
        <TextView
            android:id="@+id/tv_seebuild_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/withe"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:text="类型"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/filter_down"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_16"/>

        <TextView
            android:id="@+id/tv_seebuild_more"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/withe"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:text="更多"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/filter_down"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_16"/>
    </LinearLayout>

    <landz.fdy.com.p1_landz.landz.UI.welcome.View.RefreshListView
        android:id="@+id/lv_seebuild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="@null"
        android:scrollbars="none"
        android:layout_below="@+id/ll_seebuild_1"
        />


</RelativeLayout>
