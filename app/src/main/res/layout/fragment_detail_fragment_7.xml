<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="landz.fdy.com.p1_landz.landz.UI.welcome.fragment.DetailFragment_7">

  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@color/simple_black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_18"
        android:text="其他户型推荐"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/simple_black"/>
    <ImageView
        android:id="@+id/img_other_house"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/defult_onepic"/>

    <TextView
        android:id="@+id/tv_other_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_14" />

</LinearLayout>
