<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="landz.fdy.com.p1_landz.landz.UI.welcome.seebuild_fragment.SeeBuild_Fragment_2">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="left|center_vertical"
           android:orientation="vertical">


           <TextView
               android:id="@+id/tv_loupanmingzi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:textSize="@dimen/textsize_22"
               android:textColor="@color/black"
               android:text="昆泰中心"/>
           <TextView
               android:id="@+id/tv_huxing"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:textSize="@dimen/textsize_16"
               android:textColor="@color/simple_black"
               android:text="2室2厅2卫"/>
           <TextView
               android:id="@+id/tv_jianzhumianji"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:textSize="@dimen/textsize_16"
               android:textColor="@color/simple_black"
               android:text="2室2厅2卫"/>
           <TextView
               android:id="@+id/tv_dizi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:layout_marginBottom="5dp"
               android:textSize="@dimen/textsize_16"
               android:textColor="@color/simple_black"
               android:text="2室2厅2卫"/>

           </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="left|center_vertical"
           android:orientation="vertical">

           <TextView
               android:id="@+id/tv_jiage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"

               android:textSize="@dimen/textsize_16"
               android:textColor="#FF0000"
               android:text="2室2厅2卫"/>
           <TextView
               android:id="@+id/tv_junjia"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"

               android:textSize="@dimen/textsize_16"
               android:textColor="@color/simple_black"
               android:text="2室2厅2卫"/>
           <TextView
               android:id="@+id/tv_kehu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:textSize="@dimen/textsize_16"
               android:textColor="@color/simple_black"
               android:text="2室2厅2卫"/>

           <TextView
               android:id="@+id/tv_detail_arrow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="10dp"
               android:layout_marginBottom="5dp"
               android:drawableRight="@mipmap/first_more"
               android:textSize="@dimen/textsize_16"
               android:textColor="@color/simple_black"
               />
       </LinearLayout>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/simple_black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/teshe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize_22"
            android:textColor="@color/black"
            android:text="特色"/>
        <TextView
            android:id="@+id/tv_teshe"
            android:background="@drawable/shape1"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/teshe"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:text="保值增值"
            android:textColor="#EECD661D"
            android:textSize="14sp"
            android:visibility="visible"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/simple_black"/>
</LinearLayout>
