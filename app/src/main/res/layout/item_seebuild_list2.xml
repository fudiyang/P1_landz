<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/img_main_show2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/defult_twopic"
            android:scaleType="fitXY"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/list_floating_boxes">

        <TextView
            android:id="@+id/tv_show2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/withe"
            android:textSize="@dimen/textsize_18"
            android:text="钓鱼台"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_show2_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_show2_name"
            android:layout_alignBaseline="@id/tv_show2_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/withe"
            android:textSize="@dimen/textsize_16"
            android:text="公寓"/>

        <TextView
            android:id="@+id/tv_show2_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_show2_money"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/withe"
            android:textSize="@dimen/textsize_14"
            android:text="3-4居"/>


        <TextView
            android:id="@+id/tv_show2_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/withe"
            android:textSize="@dimen/textsize_14"
            android:text="0-0万"
            android:textStyle="bold"/>

    </RelativeLayout>

    </RelativeLayout>
</LinearLayout>