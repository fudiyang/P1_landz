<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/img_moretuijain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/defult_onepic"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/list_floating_boxes" >

            <TextView
                android:id="@+id/tv_more_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="昆泰嘉鱼中心"
                android:textColor="@color/withe"
                android:textSize="@dimen/textsize_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_more_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_more_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="公寓"
                android:layout_toRightOf="@id/tv_more_name"
                android:textColor="@color/withe" />

            <TextView
                android:id="@+id/tv_more_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_more_name"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv_more_name"
                android:layout_toLeftOf="@+id/tv_more_money"
                android:singleLine="true"
                android:textSize="@dimen/textsize_14"

                android:text="2室2厅"
                android:gravity="bottom"
                android:textColor="@color/withe" />

            <TextView
                android:id="@+id/tv_more_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv_more_desc"
                android:layout_marginRight="10dp"
                android:text="0-0万"
                android:textColor="@color/withe"
                android:textSize="@dimen/textsize_14"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/more_imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="26dp"
                android:src="@mipmap/newhouse_free" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>